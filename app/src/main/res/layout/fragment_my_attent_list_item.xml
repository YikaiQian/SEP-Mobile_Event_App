<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.mySessions.MyAttendSessionDetail"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="4dp">


        <ImageView
            android:id="@+id/my_session_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/session_list_img" />

        <TextView
            android:id="@+id/my_session_name"
            android:layout_width="288dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/my_session_img"
            tools:text="TextView"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/session_time"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_session_name"
            android:layout_alignStart="@+id/my_session_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            tools:text="TextView"
            android:textAppearance="?attr/textAppearanceBody2"/>

        <TextView
            android:id="@+id/session_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/session_time"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="108dp"
            android:layout_toEndOf="@+id/session_time"
            tools:text="TextView"
            android:textAppearance="?attr/textAppearanceBody2"/>
    </RelativeLayout>


</layout>